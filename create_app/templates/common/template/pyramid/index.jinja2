{% extends "base.jinja2" %}

{% block content %}
<div class="container">
    
    <header class="hero">
        <h1>{{ project_name }}<span class="dot">.</span></h1>
        <p class="subtitle">
            Flexible • Configurable • Performance Oriented. 
            The Python web framework that scales with you.
        </p>
    </header>

    <div class="info-grid">
        <div class="card">
            <strong>Framework</strong>
            <span>Pyramid</span>
            <p class="card-desc">Designed to make it easy to write small apps and extend them.</p>
        </div>

        <div class="card">
            <strong>Project Structure</strong>
            <span>{{ structure }}</span>
            <p class="card-desc">Highly configurable structure using Pyramid's "includeme" pattern.</p>
        </div>

        <div class="card">
            <strong>Extensibility</strong>
            <span>Add-ons &rarr;</span>
            <p class="card-desc">Easily add security, database, or session handling packages.</p>
        </div>
    </div>

    <section class="stack-section">
        <h2>Tech Stack</h2>
        <div class="tech-stack">
            <div class="tech">
                <img src="https://cdn.worldvectorlogo.com/logos/pyramid.svg" alt="Pyramid">
                <span>Pyramid</span>
            </div>
            <div class="tech">
                <img src="https://cdn.worldvectorlogo.com/logos/python-5.svg" alt="Python">
                <span>Python</span>
            </div>
            <div class="tech">
                <img src="https://upload.wikimedia.org/wikipedia/commons/3/33/Jinja_logo.svg" alt="Jinja2">
                <span>Jinja2</span>
            </div>
        </div>
    </section>

</div>
{% endblock %}